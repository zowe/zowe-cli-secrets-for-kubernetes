{
    "compilerOptions": {
        "types": ["jest", "node"],
        "target": "es2015",
        "module": "commonjs",
        "declaration": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./lib",
        "preserveConstEnums": true,
        "removeComments": false,
        "pretty": true,
        "sourceMap": true,
        "newLine": "lf",
        "skipLibCheck": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["lib", "__results__/", "__snapshots__", "node_modules"]
}
